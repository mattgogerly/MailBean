{
  "name": "mailbean",
  "productName": "MailBean",
  "version": "1.0.0",
  "description": "An email client with inbuilt phishing filter that utilises machine learning to detect malicious emails",
  "author": "Matt Gogerly",
  "main": "main.js",
  "build": {
    "appId": "com.soton.mailbean",
    "mac": {
      "category": "public.app-category.productivity",
      "identity": null,
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "output": "electron_dist"
    },
    "files": [
      "main.js"
    ],
    "extraResources": [
      "dist/**/*",
      "api/**/*",
      "splash.html"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --extra-webpack-config webpack.partial.js -o",
    "build": "ng build --base-href . --prod --extra-webpack-config webpack.partial.js",
    "test": "ng test --extra-webpack-config webpack.partial.js",
    "lint": "ng lint",
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@ckeditor/ckeditor5-angular": "^1.1.0",
    "@ckeditor/ckeditor5-build-classic": "^12.1.0",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "angular-bootstrap-md": "^7.5.0",
    "core-js": "^2.6.4",
    "electron-log": "^3.0.5",
    "global": "^4.3.2",
    "hammerjs": "^2.0.8",
    "keytar": "^4.4.1",
    "lodash": "^4.17.11",
    "material-icons": "^0.3.0",
    "minimal-request-promise": "^1.5.0",
    "node": "^11.14.0",
    "rxjs": "~6.4.0",
    "rxjs-compat": "^6.4.0",
    "tree-kill": "^1.2.1",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/animations": "^7.2.13",
    "@angular/cdk": "^7.3.2",
    "@angular/cli": "~7.3.1",
    "@angular/common": "^7.2.13",
    "@angular/compiler": "^7.2.13",
    "@angular/compiler-cli": "^7.2.13",
    "@angular/core": "^7.2.13",
    "@angular/flex-layout": "^7.0.0-beta.23",
    "@angular/forms": "^7.2.13",
    "@angular/http": "^7.2.13",
    "@angular/language-service": "^7.2.13",
    "@angular/material": "^7.3.2",
    "@angular/platform-browser": "^7.2.13",
    "@angular/platform-browser-dynamic": "^7.2.13",
    "@angular/router": "^7.2.13",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^7.3.0",
    "@ngrx/store": "^7.3.0",
    "@ngrx/store-devtools": "^7.3.0",
    "@types/jasmine": "~3.3.9",
    "@types/jasminewd2": "~2.0.3",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^11.13.4",
    "@types/rx": "^4.1.1",
    "codelyzer": "~4.5.0",
    "electron": "4.1.4",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-electron": "^6.0.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ngx-build-plus": "^7.8.0",
    "protractor": "~5.4.0",
    "ts-node": "~8.0.2",
    "tslint": "~5.12.1",
    "typescript": ">=3.1.1 <3.3"
  }
}
